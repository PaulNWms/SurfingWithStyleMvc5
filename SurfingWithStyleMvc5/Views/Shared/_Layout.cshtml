<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <div class="container">
        <header class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Surfing With Style", "Index", "home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown normal">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/#">
                            Tools&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tomato Timer", "tomato-timer", "tools")</li>
                            <li>@Html.ActionLink("What's My IP", "whats-my-ip", "tools")</li>
                            @*<li>@Html.ActionLink("YouTube Comment Finder", "youtube-comment-finder", "tools")</li>*@
                            <li>@Html.ActionLink("Calculator", "calculator", "tools")</li>
                        </ul>
                    </li>
                    <li class="dropdown normal">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/#">
                            Games&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tic-Tac-Toe", "tic-tac-toe", "games")</li>
                        </ul>
                    </li>
                    <li class="dropdown normal">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/#">
                            Practice&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Metronome", "metronome", "practice")</li>
                            <li>@Html.ActionLink("Scheduled Metronome", "scheduled-metronome", "practice")</li>
                            @*<li>@Html.ActionLink("Accelerating Metronome", "accelerating-metronome", "practice")</li>*@
                            <li>@Html.ActionLink("Scheduled Metronome Presets", "scheduled-metronome-presets", "practice")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Scheduled Metronome Help", "scheduled-metronome-help", "practice")</li>
                        </ul>
                    </li>
                    <li class="dropdown normal">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/#">
                            Composition&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Germinator", "germinator", "composition")</li>
                            <li>@Html.ActionLink("Incubator", "incubator", "composition")</li>
                        </ul>
                    </li>
                    @*<li class="dropdown normal">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/#">
                            Note to Self&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sloppy Rosetta Stone", "sloppy-rosetta-stone", "note-to-self")</li>
                            <li>@Html.ActionLink("Visual Studio", "visual-studio", "note-to-self")</li>
                        </ul>
                    </li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </header>

        @RenderBody()

        <footer class="col-md-offset-3 col-md-6 hidden-xs hidden-sm" itemscope itemtype="http://schema.org/WPFooter">
            <hr />
            <p>Copyright &copy; info might eventually go here...</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    @RenderSection("documentReady", required: false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-51714627-1', 'surfingwithstyle.com');
        ga('send', 'pageview');
    </script>
</body>
</html>
